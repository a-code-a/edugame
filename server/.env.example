# Backend Environment Variables
# Copy this file to .env and fill in your values

# MongoDB Atlas connection string
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/

# Frontend URL for CORS (leave empty for local development)
# In production on Render, this will be set automatically
FRONTEND_URL=

# Server port (Render will set this automatically in production)
PORT=5000

# Node environment
NODE_ENV=development

# Firebase Admin SDK Credentials (for production deployment)
# Get these from your Firebase Console > Project Settings > Service Accounts > Generate New Private Key
# For local development, you can use the service-account-key.json file instead (gitignored)
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project-id.iam.gserviceaccount.com
